<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg"
                    android:padding="13dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/purple_200" />

                <EditText
                    android:id="@+id/searchPrt"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pink_right"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/search"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/purple_200"
                    android:elevation="5dp"
                    android:hint="Giao NGAY trong 1h (24/7)"
                    android:padding="13dp"
                    android:textColor="#75757E"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/back"
                    app:layout_constraintStart_toEndOf="@+id/back"
                    app:layout_constraintTop_toTopOf="@+id/back"
                    tools:layout_editor_absoluteY="20dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/con1"
            android:layout_margin="20dp"
            android:background="@drawable/edit_txt_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/tvThongTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN TÀI KHOẢN"
                android:textColor="@color/purple_200"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="15dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/bg_purplewhite1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                app:layout_constraintTop_toBottomOf="@+id/tvThongTin" />

            <TextView
                android:id="@+id/suaThongTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sửa thông tin cá nhân"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawableTint="#444444"
                android:drawablePadding="20dp"
                android:textSize="18dp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/bg_purplewhite1"/>

            <ImageView
                android:id="@+id/bg_purplewhite2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                app:layout_constraintTop_toBottomOf="@+id/suaThongTin" />

            <TextView
                android:id="@+id/tvDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng từng mua"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:drawableLeft="@drawable/baseline_shopping_bag_24"
                android:drawableTint="#444444"
                android:drawablePadding="20dp"
                android:textSize="18dp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/bg_purplewhite2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/con2"
            android:layout_margin="20dp"
            android:background="@drawable/edit_txt_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/tvDangXuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:drawableTint="#444444"
                android:drawablePadding="20dp"
                android:textSize="18dp"
                android:padding="15dp"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
